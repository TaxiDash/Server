<% provide(:title, 'Sign in') %>
<% provide(:heading, 'Sign in, please!') %>
 
 <!-- The next two lines are where login related errors can be found 
     TODO: Move these somewhere nice
 
 <%= notice %> 
 <%= alert %>
-->
 
 <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>    
  <%= f.text_field :username, :autofocus => true, :class =>'form-control', :required=>'true', :placeholder => "Username" %>
    <%= f.password_field :password, :class =>'form-control', :required=>'true', :placeholder => "Password" %>

    <% if devise_mapping.rememberable? -%>
        <%= f.label :remember_me, :class=>'checkbox' do%>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        <% end %>
    <% end -%>
    <%= f.submit "Sign in", :class => 'btn btn-lg btn-primary btn-block' %>
    <br /><%= render "devise/shared/links" %> 
 <% end %>
