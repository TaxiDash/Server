<% provide(:title, 'Companies') %>
<% provide(:heading, 'Company Dashboard') %>
    
    <p><div class="row">
    <div class="col-md-10 col-sm-10">
		<%= form_tag(companies_path, method: :get, :class => "input-group") do %>
			<%= text_field_tag :search, params[:search], :class => "form-control", placeholder: "Search..." %>
			<span class="input-group-btn">
				<%= button_to(companies_path, :class => "btn btn-defualt", role: "button", title: "Search", :method => :search) do %>
				    <span type="submit"class="glyphicon glyphicon-search"></span>
			  	<% end %>
		  	</span>
		<% end %>
    </div>
    <div class="col-md-2 col-sm-2">
            <%= button_to(new_company_path, :class => "btn btn-default", :method => :get) do %>            
                <span class="glyphicon glyphicon-plus"></span> Add Company
            <% end %>
    </div>
    </div></p>

    <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>
            Name
		  </th>
		  <th>
          	Number of Drivers
          </th>
		  <th></th>
        </tr>
      </thead>

      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td><%= company.name %></td>
            <td><%= company.drivers.length %></td>
            <td><div class="btn-group">
                    <div class="btn-group">
                        <%= button_to(show_company_path(company), :class => "btn btn-mini", title: "View", method: :get) do %>
                          <span class="glyphicon glyphicon-eye-open"></span>
                        <% end %>
                    </div>
                    <div class="btn-group">
                        <%= button_to(edit_company_path(company), :class => "btn btn-mini", title: "Edit", method: :get) do %>
                          <span class="glyphicon glyphicon-pencil"></span>
                        <% end %>
                    </div>
                    <div class="btn-group">
                        <%= button_to(show_company_path(company), :class => "btn btn-mini", title: "Destroy", method: :delete, 
                            data: { confirm: 'Are you sure you want to delete this company?' } ) do %>
                          <span class="glyphicon glyphicon-trash"></span>
                        <% end %>
                    </div>
                </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <br>
