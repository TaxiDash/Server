<%= form_for(@document) do |f| %>
  <% if @document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
      <% @document.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-horizontal">
    <div class="form-group">
        <div class="col-sm-5"><%= f.hidden_field :driver_id, :class => "form-control", :autofocus => true %></div>
    </div>
    <div class="form-group">
    <%= f.label :title , :class => "col-sm-3 control-label" %>
    <div class="col-sm-5"><%= f.text_field :title, :class => "form-control" %></div>
    </div>
    <div class="form-group">
    <%= f.label :description , :class => "col-sm-3 control-label" %>
    <div class="col-sm-5"><%= f.text_field :description, :class => "form-control" %></div>
    </div>
      <div class="form-group">
        <div class ="col-sm-3 control-label"><strong>Document:</strong></div>
        <div class="col-sm-5"><%= f.file_field :doc %></div>
      </div>
   <div class="form-group">
    <div class="col-sm-offset-3 col-sm-7">
        <%= f.submit "Submit", :class=>"btn btn-primary" %>
    </div>
  </div>
<% end %>
