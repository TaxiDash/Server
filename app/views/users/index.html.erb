<% provide(:title, 'Users') %>
<% provide(:heading, 'User Dashboard') %>

    <p><div class="row">
    <div class="col-md-10 col-sm-10">
        <form class="form" role="search">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
            </div><!--input-group -->
        </form>
    </div>
    <div class="col-md-2 col-sm-2">
            <%= button_to(new_registration_path("user"), :class => "btn btn-default", role: "button", title: "New User", method: :get) do %>            
                <span class="glyphicon glyphicon-plus"></span> Add User
            <% end %>
    </div>
    </div></p>
    <!--          <h2 class="sub-header">Section title</h2> -->
    <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Last Name</th>
          <th>First Name</th>
          <th>Username</th>
          <th>Last Sign In</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
              <td><%= user.first_name %> </td>
              <td><%= user.last_name %> </td>
              
              <td><%= user.username %> <%= user.admin ? "(ADMIN)" : ""%></td>
              <td><%= user.last_sign_in_at.nil? ? "N/A" : user.last_sign_in_at.in_time_zone("America/Chicago") %></td>
              <td><%= link_to '', edit_user_path(user) %>    
                  <div class="btn-group">
                      <div class="btn-group">
                          <%= button_to(show_user_path(user), :class => "btn btn-mini", title: "View", method: :get) do %>
                            <span class="glyphicon glyphicon-eye-open"></span>
                          <% end %>
                      </div>
                      <div class="btn-group">
                          <%= button_to(edit_user_registration_path(user) , :class => "btn btn-mini", title: "Edit", method: :get) do %>
                            <span class="glyphicon glyphicon-pencil"></span>
                          <% end %>
                      </div>
                      <div class="btn-group">
                            <% if user.id != @current_user.id %>
                                <%= button_to(show_user_path(user), :class => "btn btn-mini", method: :delete, 
                                    data: { confirm: 'Are you sure you want to delete this user?' } ) do %>
                                    <span class="glyphicon glyphicon-trash"></span>
                                <% end %>
                            <% end %>
                      </div>
                    </div>
          </td>
          </tr>
      <% end %>
          </tbody>
      </table>
  </div>
  <br>

