<% provide(:title, 'Riders') %>
<% provide(:heading, 'Rider Dashboard') %>
    
    <p><div class="row">
      <div class="col-md-9 col-sm-9 col-xs-9 pull-left">
        <%= render partial: 'layouts/index/search' %>
      </div>
      <div class="col-md-3 col-sm-3 col-xs-3">
        <%= render partial: 'layouts/index/add_button', locals: {name: "Rider"} %>
      </div> 
</div></p>

    <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>
            UUID
         </th>
          <th>
            Total Ratings
         </th>
        </tr>
      </thead>

      <tbody>
        <% @riders.each do |rider| %>
          <tr>
            <td><%= rider.uuid %></td>
            <td><%= rider.ratings.length %></td>
            <td><%= render partial: 'layouts/index/row_buttons', locals: {item: rider} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <br>
