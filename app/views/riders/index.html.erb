<% provide(:title, 'Riders') %>
<% provide(:heading, 'Rider Dashboard') %>
    
    <p><div class="row">
    <div class="col-md-10 col-sm-10">
		<%= form_tag(riders_path, method: :get, :class => "input-group") do %>
			<%= text_field_tag :search, params[:search], :class => "form-control", placeholder: "Search..." %>
			<span class="input-group-btn">
				<%= button_to(riders_path, :class => "btn btn-defualt", role: "button", title: "Search", :method => :search) do %>
				    <span type="submit"class="glyphicon glyphicon-search"></span>
			  	<% end %>
		  	</span>
		<% end %>
    </div>
    <div class="col-md-2 col-sm-2">
            <%= button_to(new_rider_path, :class => "btn btn-default", :method => :get) do %>            
                <span class="glyphicon glyphicon-plus"></span> Add Rider
            <% end %>
    </div>
    </div></p>

    <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>
          	<%= sortable "uuid", "UUID" %>
          	<% if sort_column == "uuid" %>
          		<% if sort_direction == "asc" %>
          			<span class="glyphicon glyphicon-chevron-up"></span>
          		<% else %>
          			<span class="glyphicon glyphicon-chevron-down"></span>
          		<% end %>
          	<% end %>
         </th>
          <th>
            Total Ratings
         </th>
        </tr>
      </thead>

      <tbody>
        <% @riders.each do |rider| %>
          <tr>
            <td><%= rider.uuid %></td>
            <td><%= rider.ratings.length %></td>
            <td><div class="btn-group">
                    <div class="btn-group">
                        <%= button_to(show_rider_path(rider), :class => "btn btn-mini", title: "View", method: :get) do %>
                          <span class="glyphicon glyphicon-eye-open"></span>
                        <% end %>
                    </div>
                    <div class="btn-group">
                        <%= button_to(edit_rider_path(rider), :class => "btn btn-mini", title: "Edit", method: :get) do %>
                          <span class="glyphicon glyphicon-pencil"></span>
                        <% end %>
                    </div>
                    <div class="btn-group">
                        <%= button_to(show_rider_path(rider), :class => "btn btn-mini", title: "Destroy", method: :delete, 
                            data: { confirm: 'Are you sure you want to delete this rider?' } ) do %>
                          <span class="glyphicon glyphicon-trash"></span>
                        <% end %>
                    </div>
                </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <br>
