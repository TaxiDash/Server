<!-- button -->
<a class="btn btn-nav btn-lg btn-block" data-toggle="modal" data-target=<%= "##{modal_type}ImportModal" %>>
  <%= modal_type %>
</a>


<!-- modal -->

<div class="modal fade" id=<%= "#{modal_type}ImportModal" %> tabindex="-1" role="dialog" aria-labelledby=<%= "#{modal_type}Label" %> aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id=<%= "#{modal_type}Label"%>>Import <%= modal_type %></h4>
      </div>
      <%= bootstrap_form_tag url: import_url, layout: :horizontal do |f| %>
      <div class="modal-body">
        <%= render partial: 'layouts/form_alert', locals: {f: f} %>
        <%= f.file_field :file %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.primary "Upload" %>
      </div>
    <% end %>
    </div>
  </div>
</div>

