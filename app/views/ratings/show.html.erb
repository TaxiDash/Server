<% provide(:title, 'Rating') %>
<%= content_for :heading do %>
    <%= render 'layouts/buttons/back_button' %>
    <%= link_to(edit_rating_path(@rating), :class => "btn btn-lg btn-link pull-right", title: "Edit", method: :get) do %>            
        <span class="glyphicon glyphicon-pencil"></span> Edit
    <% end %>
    Rating of <%= @rating.driver.last_name << ', ' <<  @rating.driver.first_name %>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Rated by:</strong>
  <%= @rating.rider_id ? @rating.rider.uuid : "N/A" %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @rating.rating %>
</p>

<p>
  <strong>Comments:</strong>
  <%= @rating.comments %>
</p>

<p>
  <strong>Timestamp:</strong>
  <%= @rating.timestamp %>
</p>

<span class="btn btn-lg btn-lnk btn-block">
  <%= @rating.ride_id.nil? ? "No Associated Ride" : link_to("View Ride", show_ride_path(@rating.ride_id)) %>
</span>

