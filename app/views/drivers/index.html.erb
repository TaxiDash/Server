<% provide(:title, 'Drivers') %>
<% provide(:heading, 'Driver Dashboard') %>
    
    <p><div class="row">
    <div class="col-md-10 col-sm-10">
        <div class="form" role="search">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
            </div><!--input-group -->
        </div>
    </div>
    <div class="col-md-2 col-sm-2">
            <%= button_to(new_driver_path, :class => "btn btn-default", :method => :get) do %>            
                <span class="glyphicon glyphicon-plus"></span> Add Driver
            <% end %>
    </div>
    </div></p>

    <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name (Last, First Middle)</th>
          <th>Company Name</th>
          <th>Permit Expiration Date</th>
          <th>Permit #</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @drivers.each do |driver| %>
          <tr>
            <td><%= driver.last_name %>, <%= driver.first_name %> <%= driver.middle_name %></td>
            <td><%= driver.company_name %></td>
            <td><%= driver.permit_expiration_date %></td>
            <td><%= driver.permit_number %></td>
            <td><div class="btn-group">
                    <div class="btn-group">
                        <%= button_to(show_driver_path(driver), :class => "btn btn-mini", title: "View", method: :get) do %>
                          <span class="glyphicon glyphicon-eye-open"></span>
                        <% end %>
                    </div>
                    <div class="btn-group">
                        <%= button_to(edit_driver_path(driver), :class => "btn btn-mini", title: "Edit", method: :get) do %>
                          <span class="glyphicon glyphicon-pencil"></span>
                        <% end %>
                    </div>
                    <div class="btn-group">
                        <%= button_to(show_driver_path(driver), :class => "btn btn-mini", title: "Destroy", method: :delete, 
                            data: { confirm: 'Are you sure you want to delete this driver?' } ) do %>
                          <span class="glyphicon glyphicon-trash"></span>
                        <% end %>
                    </div>
                </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <br>

