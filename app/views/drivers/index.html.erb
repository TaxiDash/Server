<% provide(:title, 'Drivers') %>
<% provide(:heading, 'Driver Dashboard') %>
    
    <p><div class="row">
    <div class="col-md-10 col-sm-10">
		<%= form_tag(drivers_path, method: :get, :class => "input-group") do %>
			<%= text_field_tag :search, params[:search], :class => "form-control", placeholder: "Search..." %>
			<span class="input-group-btn">
				<%= button_to(drivers_path, :class => "btn btn-defualt", role: "button", title: "Search", :method => :search) do %>
				    <span type="submit"class="glyphicon glyphicon-search"></span>
			  	<% end %>
		  	</span>
		<% end %>
    </div>
    
    <div class="col-md-2 col-sm-2">
            <%= button_to(new_driver_path, :class => "btn btn-default", :method => :get) do %>            
                <span class="glyphicon glyphicon-plus"></span> Add Driver
            <% end %>
    </div>
    </div></p>

    <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>
          	<%= sortable "last_name", "Name (Last, First Middle)" %>
          	<% if sort_column == "last_name" %>
          		<% if sort_direction == "asc" %>
          			<span class="glyphicon glyphicon-chevron-up"></span>
          		<% else %>
          			<span class="glyphicon glyphicon-chevron-down"></span>
          		<% end %>
          	<% end %>
          </th>
		  <th>
		  	<%= sortable "company_id", "Company Name" %>
		  	<% if sort_column == "company_id" %>
          		<% if sort_direction == "asc" %>
          			<span class="glyphicon glyphicon-chevron-up"></span>
          		<% else %>
          			<span class="glyphicon glyphicon-chevron-down"></span>
          		<% end %>
          	<% end %>
		  </th>
		  <th>
		  	<%= sortable "permit_expiration_date", "Permit Expiration Date" %>
		  	<% if sort_column == "permit_expiration_date" %>
          		<% if sort_direction == "asc" %>
          			<span class="glyphicon glyphicon-chevron-up"></span>
          		<% else %>
          			<span class="glyphicon glyphicon-chevron-down"></span>
          		<% end %>
          	<% end %>
		  </th>
		  <th>
		  	<%= sortable "permit_number", "Permit #" %>
		  	<% if sort_column == "permit_number" %>
          		<% if sort_direction == "asc" %>
          			<span class="glyphicon glyphicon-chevron-up"></span>
          		<% else %>
          			<span class="glyphicon glyphicon-chevron-down"></span>
          		<% end %>
          	<% end %>
		  </th>
		  <th></th>
        </tr>
      </thead>

      <tbody>
        <% @drivers.each do |driver| %>
          <tr>
            <td><%= driver.last_name %>, <%= driver.first_name %> <%= driver.middle_name %></td>
            <td><%= Company.select('name').all.map(&:name)[driver.company_id] %></td>
            <td><%= driver.permit_expiration_date %></td>
            <td><%= driver.permit_number %></td>
            <td><div class="btn-group">
                    <div class="btn-group">
                        <%= button_to(show_driver_path(driver), :class => "btn btn-mini", title: "View", method: :get) do %>
                          <span class="glyphicon glyphicon-eye-open"></span>
                        <% end %>
                    </div>
                    <div class="btn-group">
                        <%= button_to(edit_driver_path(driver), :class => "btn btn-mini", title: "Edit", method: :get) do %>
                          <span class="glyphicon glyphicon-pencil"></span>
                        <% end %>
                    </div>
                    <div class="btn-group">
                        <%= button_to(show_driver_path(driver), :class => "btn btn-mini", title: "Destroy", method: :delete, 
                            data: { confirm: 'Are you sure you want to delete this driver?' } ) do %>
                          <span class="glyphicon glyphicon-trash"></span>
                        <% end %>
                    </div>
                </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <br>

